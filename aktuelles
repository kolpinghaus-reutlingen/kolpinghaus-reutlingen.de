{% capture nowunix %}{{'now' | date: '%s'}}{% endcapture %}
{% assign nowunix = nowunix | plus: 0 %}


{% assign _dates = "2018-09-07 2018-11-02 2018-12-07" | split: " " | sort %}
{% for _element in _dates %}
  {% capture _elementtime %}{{_element | date: '%s'}}{% endcapture %}
  {% assign _elementtime = _elementtime | plus: 0 %}
  {% if _elementtime > nowunix %}
    {% assign _date = _element %}
    {% break %}
  {% endif %}
{% endfor %}

{% if _date %}
<div class="card mb-4">
  <div class="card-body">
    <h4 class="card-title">nächste Bücher Annahme</h4>
      <p class="card-text">{% include pretty-date date=_date mode=2 %}</p>
      <br>
      <small>ab 14:30 Uhr bis ca. 16:30 Uhr</small>
  </div>
</div>
{% endif %}



{% assign _until = "2018-10-20" | date: '%s' | plus: 0 %}
{% if _until > nowunix %}
<div class="card mb-4">
  <div class="card-body">
    <h3 class="card-title">nächste Bücher Börse</h3>
    <a href="{% link _veranstaltungen/2018-10-20-buecher-boerse.md %}">
      <img src="{% include img-link id='2018-10-20-buecher-boerse' options='w_300' folder='veranstaltungen' %}" style="max-width: 100%;" alt="{% include pretty-date date=_until mode=2 %}"></a>
  </div>
</div>
{% endif %}




