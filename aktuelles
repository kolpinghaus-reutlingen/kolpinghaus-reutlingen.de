{% capture nowunix %}{{'now' | date: '%s'}}{% endcapture %}
{% assign nowunix = nowunix | plus: 0 %}

{% assign _dates = "" | split: " " | sort %}
{% for _element in _dates %}
  {% capture _elementtime %}{{_element | date: '%s'}}{% endcapture %}
  {% assign _elementtime = _elementtime | plus: 0 %}
  {% if _elementtime > nowunix %}
    {% assign _date = _element %}
    {% break %}
  {% endif %}
{% endfor %}


<div class="card mb-4">
  <div class="card-body">
    <h3 class="card-title">Stellenausschreibung</h3>
    <a href="{% include img-link id='kolpinghaus_stellenausschreibung.pdf' folder='pdf' %}">
      <img src="{% include img-link id='kolpinghaus_stellenausschreibung.jpg' options='w_300' folder='pdf' %}" style="max-width: 100%;" alt="Stellenausschreibung"></a>
  </div>
</div>


{% if _date %}
<div class="card mb-4">
  <div class="card-body">
    <h4 class="card-title">nächste Bücher Annahme</h4>
      <p class="card-text">{% include pretty-date date=_date mode=2 %}</p>
      <br>
      <small>ab 14:30 Uhr bis ca. 16:30 Uhr</small>
  </div>
</div>
{% endif %}


